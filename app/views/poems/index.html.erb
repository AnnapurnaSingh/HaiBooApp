<h1>Poems#index</h1>
<p>Find me in app/views/poems/index.html.erb</p>

<a href="/poems">HaiBoo Home</a>
<ul>

  <% @poems.each do |poem| %>
    <li>
      <a href="/poem/<%= poem.id %>">
        <%= poem.text %>
      </a>
    </li>
  <% end %>

</ul>

<% form_tag("/poems/#{@poem.id }"), method: :create) do %>
  <%= submit_tag "Create a HaiBoo!" %>
<% end %>
